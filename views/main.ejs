<%- include('includes/head.ejs') %>
</head>
<body>
  <%- include('includes/navigation.ejs') %>
  <div class="blog-list">
    <button><a href="/blog/new">New Blog</a></button>
    <h1>blogs</h1>
    <% if (blogs.length === 0) { %>
      <h2>No posts yet</h2>
    <% } else { %>
      <% blogs.forEach((blog) => { %>
        <%- include('blog-item.ejs', { blog: blog }) %>
      <% }) %>  
    <% } %>
  </div>
</body>
<%- include('includes/end.ejs') %>